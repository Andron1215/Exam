<Page x:Class="Cvety.Pages.PageAvtorizaciya"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cvety.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAvtorizaciya">

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
		<Label Content="Логин"/>
		<TextBox x:Name="tbxLogin"/>
		<Label Content="Пароль"/>
		<TextBox x:Name="tbxParol"/>
		<Button Content="Вход" x:Name="btnVhod" Click="BtnVhod_Click" Margin="0 50 0 0"/>
	</StackPanel>
</Page>
